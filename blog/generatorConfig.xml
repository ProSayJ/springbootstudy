<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <classPathEntry location="../utils/src/main/java/com/prosayj/springboot/mybatisgen/mysql/mysql-connector-java-5.1.37.jar"/>



    <context id="article" defaultModelType="flat" targetRuntime="MyBatis3">
        <!--不需要注释-->
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <jdbcConnection
                connectionURL="jdbc:mysql://127.0.0.1:3306/blog?useUnicode=true&amp;characterEncoding=UTF-8"
                driverClass="com.mysql.jdbc.Driver" userId="root" password="root"/>

        <javaModelGenerator targetPackage="com.prosayj.springboot.models.article.domain"
                            targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="com.prosayj.springboot.models.article.mapper"
                         targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.prosayj.springboot.models.article.mapper"
                             targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table schema="general" tableName="article" domainObjectName="ArticleDomain"
               enableCountByExample="false" enableUpdateByExample="false" enableDeleteByExample="false"
               enableSelectByExample="false" selectByExampleQueryId="false">
            <generatedKey column="id" sqlStatement="MySql" identity="true" type="post"/>
        </table>

    </context>

</generatorConfiguration>